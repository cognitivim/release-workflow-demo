{
  "name": "test-commit",
  "version": "0.0.0",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^9.1.0",
    "@commitlint/config-conventional": "^9.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.1.2",
    "conventional-changelog-conventionalcommits": "^4.3.1",
    "conventional-commit-types": "^3.0.0",
    "cz-customizable": "^6.2.0",
    "dotenv-cli": "^3.1.0",
    "semantic-release": "^17.1.0"
  },
  "scripts": {
    "commit:lint": "yarn commitlint --from HEAD~1 --to HEAD --verbose",
    "commit:prompt": "yarn git-cz",
    "commit:prompt-retry": "yarn git-cz --retry",
    "s-release:test": "dotenv -- yarn semantic-release --dry-run --no-ci --debug",
    "s-release:local": "dotenv -- yarn semantic-release --no-ci --debug",
    "s-release:ci": "yarn semantic-release",
    "_version": "yarn version --new-version 0.0.1",
    "_postversion": "git push --tags && yarn publish . --tag $npm_package_version && git push && echo \"Successfully released version $npm_package_version!\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cognitivim/release-workflow-demo.git"
  },
  "private": true,
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn version --no-commit-hooks --no-git-tag-version --new-version ${nextRelease.version}"
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
